<!-- Method Documentation URL: https://www.elastic.co/guide/en/elasticsearch/reference/current/docs-bulk.html#docs-bulk -->
<template name="performBulkOperations" xmlns="http://ws.apache.org/ns/synapse">
    <sequence>
        <script language="js">
            <![CDATA[
            var commonQueryParams = mc.getProperty('uri.var.commonQueryParams');
            var urlQuery = '';
            if (commonQueryParams != null && commonQueryParams != "") {
               urlQuery +=  commonQueryParams;
            }
            // Add a leading '?' and remove the trailing '&'
            if (urlQuery != "") {
               urlQuery = '?' + urlQuery.toString().substring(0, urlQuery.toString().lastIndexOf("&"));
               mc.setProperty('uri.var.urlQuery', urlQuery);
            }
         ]]>
        </script>
        <property name="DISABLE_CHUNKING" value="true" scope="axis2"/>
        <call>
            <endpoint>
                <http method="post" uri-template="{uri.var.apiUrl}/_bulk{+uri.var.urlQuery}"/>
            </endpoint>
        </call>
    </sequence>
</template>
